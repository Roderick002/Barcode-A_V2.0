<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Glow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimaryOpacity" />
            <corners
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp"
                android:bottomRightRadius="43dp"
                android:bottomLeftRadius="43dp" />
        </shape>
    </item>

    <!-- Main shape -->
    <item android:left="3dp" android:top="3dp" android:right="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <gradient android:type="linear"
                android:startColor="#F4EDFF"
                android:endColor="#F4EDFF" />
            <corners
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp"
                android:bottomRightRadius="40dp"
                android:bottomLeftRadius="40dp" />
        </shape>
    </item>

</layer-list>
