<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. for Day -->
    <style name="Theme.BarcodeA" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowBackground">@color/colorBackgroundLight</item>

        <item name="floatingActionButtonStyle">@style/CustomFAB</item>

        <item name="fabColor">@color/teal_700</item>
        <item name="fabIconTint">@color/colorPrimary</item>

    </style>

    <style name="Theme.BarcodeA.GreenStatusBar" parent="Theme.BarcodeA">
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Theme.BarcodeA.TransparentStatusBar" parent="Theme.BarcodeA">
        <item name="android:statusBarColor">@color/colorBackgroundLight</item>
    </style>

    <style name="Glass">
        <item name="android:backgroundTintMode">screen</item>
        <item name="background">@drawable/glass</item>
    </style>

    <style name="Menu">
        <item name="android:backgroundTint">@color/white</item>

    </style>

    <style name="TextIconTint">
        <item name="tint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextIconTintInvert">
        <item name="tint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="whiteIconTint">
        <item name="tint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="MyRatingBar" parent="Widget.AppCompat.RatingBar">

        <item name="colorControlNormal">#4D000000</item>
        <item name="colorControlActivated">@color/colorPrimaryLight</item>

    </style>



    <style name="CustomFAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="cornerRadius">100dp</item> <!-- Ensure it's a circle -->
    </style>





</resources>